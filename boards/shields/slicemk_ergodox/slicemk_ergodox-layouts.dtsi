#include <physical_layouts.dtsi>

/ {
    slicemk_ergodox_layout: slicemk_ergodox_layout {
        compatible = "zmk,physical-layout";
        display-name = "ErgoDox";

        transform = <&default_transform>;

        keys  //                     w   h    x    y     rot   rx    ry
            // Row 0 - Number row
            , <&key_physical_attrs 100 100    0  100       0     0     0>  // RC(1,0) GRAVE
            , <&key_physical_attrs 100 100  100  100       0     0     0>  // RC(1,1) 1
            , <&key_physical_attrs 100 100  200  100       0     0     0>  // RC(1,2) 2
            , <&key_physical_attrs 100 100  300  100       0     0     0>  // RC(1,3) 3
            , <&key_physical_attrs 100 100  400  100       0     0     0>  // RC(1,4) 4
            , <&key_physical_attrs 100 100  500  100       0     0     0>  // RC(1,5) 5
            , <&key_physical_attrs 100 100  600  100       0     0     0>  // RC(1,6) PRINTSCREEN
            , <&key_physical_attrs 100 100 1000  100       0     0     0>  // RC(1,7) NONE
            , <&key_physical_attrs 100 100 1100  100       0     0     0>  // RC(1,8) 6
            , <&key_physical_attrs 100 100 1200  100       0     0     0>  // RC(1,9) 7
            , <&key_physical_attrs 100 100 1300  100       0     0     0>  // RC(1,10) 8
            , <&key_physical_attrs 100 100 1400  100       0     0     0>  // RC(1,11) 9
            , <&key_physical_attrs 100 100 1500  100       0     0     0>  // RC(1,12) 0
            , <&key_physical_attrs 100 100 1600  100       0     0     0>  // RC(1,13) K_APPLICATION

            // Row 2 - Top alpha row
            , <&key_physical_attrs 100 100    0  200       0     0     0>  // RC(2,0) TAB
            , <&key_physical_attrs 100 100  100  200       0     0     0>  // RC(2,1) Q
            , <&key_physical_attrs 100 100  200  200       0     0     0>  // RC(2,2) W
            , <&key_physical_attrs 100 100  300  200       0     0     0>  // RC(2,3) E
            , <&key_physical_attrs 100 100  400  200       0     0     0>  // RC(2,4) R
            , <&key_physical_attrs 100 100  500  200       0     0     0>  // RC(2,5) T
            , <&key_physical_attrs 100 100  600  200       0     0     0>  // RC(2,6) CAPSLOCK
            , <&key_physical_attrs 100 100 1000  200       0     0     0>  // RC(2,7) C_MUTE
            , <&key_physical_attrs 100 100 1100  200       0     0     0>  // RC(2,8) Y
            , <&key_physical_attrs 100 100 1200  200       0     0     0>  // RC(2,9) U
            , <&key_physical_attrs 100 100 1300  200       0     0     0>  // RC(2,10) I
            , <&key_physical_attrs 100 100 1400  200       0     0     0>  // RC(2,11) O
            , <&key_physical_attrs 100 100 1500  200       0     0     0>  // RC(2,12) P
            , <&key_physical_attrs 100 100 1600  200       0     0     0>  // RC(2,13) BACKSLASH

            // Row 3 - Home row (no keys at columns 6 and 7)
            , <&key_physical_attrs 100 100    0  300       0     0     0>  // RC(3,0) ESCAPE
            , <&key_physical_attrs 100 100  100  300       0     0     0>  // RC(3,1) A
            , <&key_physical_attrs 100 100  200  300       0     0     0>  // RC(3,2) S
            , <&key_physical_attrs 100 100  300  300       0     0     0>  // RC(3,3) D
            , <&key_physical_attrs 100 100  400  300       0     0     0>  // RC(3,4) F
            , <&key_physical_attrs 100 100  500  300       0     0     0>  // RC(3,5) G
            , <&key_physical_attrs 100 100 1100  300       0     0     0>  // RC(3,8) H
            , <&key_physical_attrs 100 100 1200  300       0     0     0>  // RC(3,9) J
            , <&key_physical_attrs 100 100 1300  300       0     0     0>  // RC(3,10) K
            , <&key_physical_attrs 100 100 1400  300       0     0     0>  // RC(3,11) L
            , <&key_physical_attrs 100 100 1500  300       0     0     0>  // RC(3,12) SEMICOLON
            , <&key_physical_attrs 100 100 1600  300       0     0     0>  // RC(3,13) BACKSPACE

            // Row 4 - Bottom alpha row
            , <&key_physical_attrs 100 100    0  400       0     0     0>  // RC(4,0) MO(SYMB)
            , <&key_physical_attrs 100 100  100  400       0     0     0>  // RC(4,1) Z
            , <&key_physical_attrs 100 100  200  400       0     0     0>  // RC(4,2) X
            , <&key_physical_attrs 100 100  300  400       0     0     0>  // RC(4,3) C
            , <&key_physical_attrs 100 100  400  400       0     0     0>  // RC(4,4) V
            , <&key_physical_attrs 100 100  500  400       0     0     0>  // RC(4,5) B
            , <&key_physical_attrs 100 100  600  400       0     0     0>  // RC(4,6) C_VOLUME_DOWN
            , <&key_physical_attrs 100 100 1000  400       0     0     0>  // RC(4,7) C_VOLUME_UP
            , <&key_physical_attrs 100 100 1100  400       0     0     0>  // RC(4,8) N
            , <&key_physical_attrs 100 100 1200  400       0     0     0>  // RC(4,9) M
            , <&key_physical_attrs 100 100 1300  400       0     0     0>  // RC(4,10) COMMA
            , <&key_physical_attrs 100 100 1400  400       0     0     0>  // RC(4,11) PERIOD
            , <&key_physical_attrs 100 100 1500  400       0     0     0>  // RC(4,12) SLASH
            , <&key_physical_attrs 100 100 1600  400       0     0     0>  // RC(4,13) MO(SYMB)

            // Row 5 - Bottom modifier row (no keys at columns 5-8)
            , <&key_physical_attrs 100 100    0  500       0     0     0>  // RC(5,0) NONE
            , <&key_physical_attrs 100 100  100  500       0     0     0>  // RC(5,1) MO(MOUSE)
            , <&key_physical_attrs 100 100  200  500       0     0     0>  // RC(5,2) LEFT_ALT
            , <&key_physical_attrs 100 100  300  500       0     0     0>  // RC(5,3) LEFT_ARROW
            , <&key_physical_attrs 100 100  400  500       0     0     0>  // RC(5,4) UP_ARROW
            , <&key_physical_attrs 100 100 1200  500       0     0     0>  // RC(5,9) DOWN_ARROW
            , <&key_physical_attrs 100 100 1300  500       0     0     0>  // RC(5,10) RIGHT_ARROW
            , <&key_physical_attrs 100 100 1400  500       0     0     0>  // RC(5,11) RIGHT_ALT
            , <&key_physical_attrs 100 100 1500  500       0     0     0>  // RC(5,12) MO(MOUSE)
            , <&key_physical_attrs 100 100 1600  500       0     0     0>  // RC(5,13) TO(NMPAD)

            // Row 6 - Thumb cluster
            , <&key_physical_attrs 100 100  500  600       0     0     0>  // RC(6,6) DELETE
            , <&key_physical_attrs 100 100  400  600       0     0     0>  // RC(6,5) HOME
            , <&key_physical_attrs 100 100 1100  600       0     0     0>  // RC(6,8) END
            , <&key_physical_attrs 100 100 1200  600       0     0     0>  // RC(6,7) INSERT
            , <&key_physical_attrs 100 100  300  700       0     0     0>  // RC(6,4) LEFT_SHIFT
            , <&key_physical_attrs 100 100  400  700       0     0     0>  // RC(6,3) LEFT_CONTROL
            , <&key_physical_attrs 100 100  500  700       0     0     0>  // RC(6,2) PAGE_UP
            , <&key_physical_attrs 100 100 1100  700       0     0     0>  // RC(6,11) PAGE_DOWN
            , <&key_physical_attrs 100 100 1200  700       0     0     0>  // RC(6,10) SPACE
            , <&key_physical_attrs 100 100 1300  700       0     0     0>  // RC(6,9) LEFT_GUI
            , <&key_physical_attrs 100 100  500  800       0     0     0>  // RC(6,1) RETURN
            , <&key_physical_attrs 100 100 1100  800       0     0     0>  // RC(6,12) MO(FN)
            ;
    };
};
